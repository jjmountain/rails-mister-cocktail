<div class="container" style="background-color: white; padding-bottom: 20px;">
  <h1>Add a dose to <%=@cocktail.name%></h1>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.association :ingredient, collection: Ingredient.order(name: :asc) %>
    <%= f.input :description %>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
  <%= link_to "Return to home", cocktails_path %>
</div>
