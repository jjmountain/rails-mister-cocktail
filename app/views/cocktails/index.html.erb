<h1>Welcome to Mister Cocktail</h1>

<p><%= link_to "Add a cocktail", new_cocktail_path %></p>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
    <% @cocktails.each do | cocktail | %>
      <%= link_to cocktail_path(cocktail.id) do %>
        <div class="card">
          <%= cl_image_tag(cocktail.photo,
          width: 400, height: 300, crop: :fill) %>
            <div class="card-description">
              <%= cocktail.name %>
            </div>
        </div>
      <% end %>
    <% end %>
    </div>
  </div>
</div>
