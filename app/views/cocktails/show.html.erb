<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12" style="text-align: center; position: relative; background-color: white; padding-bottom: 20px;">
    <h1 style="color: #EB5845;  "><%= @cocktail.name %></h1>
    <%= link_to "Delete #{@cocktail.name}", cocktail_path(@cocktail), method: :delete %>
    </div>
  </div>
  <div class="row" style="margin-top: 30px; background-color: white; padding: 40px 0px;">
    <div class="col-xs-12 col-sm-6 col-md-6">
      <div class="text-center">
      <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fit %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6">
      <h3>Doses</h3> <%= link_to "Add dose", new_cocktail_dose_path(@cocktail) %>
      <% @cocktail.doses.each do | dose |  %>
        <li><%= dose.ingredient.name %> - <%= dose.description %> <%= link_to "delete", dose_path(dose), method: :delete %></li>
      <% end %>
    </div>
</div>
